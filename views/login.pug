extends base

block content
    h2(style='text-align: center') Login 
    form.login-form(action="") 
        .mb-3 
            label.form-label(for='username-input') Username: 
            input.form-control(type='text' id='username-input')
        .mb-3 
            label.form-label(for='password-input') Password: 
            input.form-control(type='password' id='password-input')
        .text-center
            button.btn.btn-success.btn-lg(type='submit') Login
