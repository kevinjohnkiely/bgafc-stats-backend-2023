extends base

block content 
    .container-fluid 
        h3.page-heading Add a Player
        form.add-player-form
            .row
                .col-md-4.col-sm-12
                    .mb-3 
                        label.form-label(for='firstname') First Name: 
                        input.form-control(type='text' id='firstname')
                .col-md-4.col-sm-12
                    .mb-3 
                        label.form-label(for='lastname') Last Name: 
                        input.form-control(type='text' id='lastname')
                .col-md-4.col-sm-12
                    .mb-3
                        label.form-label(for='slug') Player Slug: 
                        input.form-control(type='text' id='slug')
            .text-center
                button.btn.btn-success.btn-lg(type='submit') Login